<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>QualityMinds</groupId>
    <artifactId>coding_challenge</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <!-- common properties-->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.java.version>1.8</project.java.version>

        <maven.test.failure.ignore>true</maven.test.failure.ignore> <!-- build will be success even if tests fail and report will be generated by site goal -->

        <!-- Maven plugin versions -->
        <maven-surefire-plugin.version>2.22.0</maven-surefire-plugin.version>
        <maven-compiler-plugin.version>3.6.0</maven-compiler-plugin.version>
        <properties-maven-plugin.version>1.0.0</properties-maven-plugin.version>
        <allure-maven-plugin.version>2.9</allure-maven-plugin.version>
        <allure-testng.version>2.7.0</allure-testng.version>
        <!-- dependency versions -->
        <maven-surefire-plugin.version>2.9</maven-surefire-plugin.version>
        <assertj.version>3.10.0</assertj.version>
        <log4j.version>2.11.1</log4j.version>
        <log4j-simple.version>1.7.9</log4j-simple.version>
        <selenium.version>3.9.1
        </selenium.version> <!-- newest: 3.8.1 but deprecates DesiredCapabilities.chrome() etc. -->
        <commons-lang3.version>3.7</commons-lang3.version>
        <testng.version>6.14.3</testng.version>
        <aspectj.version>1.9.1</aspectj.version>
        <org.apache.commons.io.version>2.4</org.apache.commons.io.version>

        <!-- selenium properties-->
        <webdriver_binaries>/src/test/resources/webdrivers</webdriver_binaries>
        <webdriver.browser.type>chrome</webdriver.browser.type> <!-- domyślna przeglądarka - chrome/firefox/ie -->
        <webdriver.page.load.timeout.seconds>60</webdriver.page.load.timeout.seconds>
        <webdriver.implicit.wait.seconds>5</webdriver.implicit.wait.seconds>

        <!-- webdriver.chrome.driver set here below enables support for chromedriver without the use of driver-binary-downloader-maven-plugin -->
        <webdriver.chrome.driver>${project.basedir}${webdriver_binaries}/chromedriver_2.40.exe
        </webdriver.chrome.driver>
        <webdriver.gecko.driver>${project.basedir}${webdriver_binaries}/geckodriver.exe</webdriver.gecko.driver>

        <test.suite>testsuite</test.suite> <!-- domyślny zestaw testów &ndash;&gt;-->
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>  <!-- Selenium Java bindings -->
            <version>${selenium.version}</version>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>  <!-- testing framework: TestNG -->
            <version>${testng.version}</version>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>  <!-- AssertJ assertions (assertThat()...) -->
            <version>${assertj.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId> <!-- console logger: Log4J -->
            <artifactId>log4j-core</artifactId>
            <version>${log4j.version}</version>
        </dependency>
        <dependency>
            <groupId>io.qameta.allure</groupId> <!-- Allure reporting TestNG adaptor -->
            <artifactId>allure-testng</artifactId>
            <version>${allure-testng.version}</version>
        </dependency>
        <dependency>
            <groupId>io.qameta.allure</groupId>  <!-- Allure reporting Maven plugin -->
            <artifactId>allure-maven</artifactId>
            <version>${allure-maven-plugin.version}</version>
        </dependency>
        <dependency>
            <groupId>org.aspectj</groupId>
            <artifactId>aspectjweaver</artifactId>
            <version>${aspectj.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${commons-lang3.version}</version>
        </dependency>
        <dependency> <!-- needed for FileUtils.writeByteArrayToFile() -->
            <groupId>org.apache.directory.studio</groupId>
            <artifactId>org.apache.commons.io</artifactId>
            <version>${org.apache.commons.io.version}</version>
        </dependency>

    </dependencies>

    <reporting>
        <excludeDefaults>true</excludeDefaults>
        <plugins>
            <plugin>
                <groupId>io.qameta.allure</groupId>
                <artifactId>allure-maven</artifactId>
                <version>${allure-maven-plugin.version}</version>
            </plugin>
        </plugins>
    </reporting>


    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${project.java.version}</source>
                    <target>${project.java.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven-surefire-plugin.version}</version>
                <configuration>
                    <suiteXmlFiles>
                        <suiteXmlFile>src/test/resources/testng/${test.suite}.xml</suiteXmlFile>
                    </suiteXmlFiles>
                    <argLine>
                        -javaagent:"${settings.localRepository}/org/aspectj/aspectjweaver/${aspectj.version}/aspectjweaver-${aspectj.version}.jar"
                    </argLine>
                    <systemProperties>
                        <property>
                            <name>allure.results.directory</name>
                            <value>${project.build.directory}/allure-results</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>